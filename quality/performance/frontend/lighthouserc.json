{
  "ci": {
    "collect": {
      "numberOfRuns": 1,
      "staticDistDir": "../frontend/dist/stock-brokerage-ui/browser",
      "url": [
        "http://127.0.0.1:4173/login",
        "http://127.0.0.1:4173/portfolio",
        "http://127.0.0.1:4173/trade",
        "http://127.0.0.1:4173/order-history",
        "http://127.0.0.1:4173/realized-gains",
        "http://127.0.0.1:4173/unrealized-gains",
        "http://127.0.0.1:4173/fund-account",
        "http://127.0.0.1:4173/import-data",
        "http://127.0.0.1:4173/admin/clients",
        "http://127.0.0.1:4173/admin/rules"
      ],
      "settings": {
        "preset": "desktop"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", { "minScore": 0.75 }],
        "categories:accessibility": ["warn", { "minScore": 0.85 }],
        "categories:best-practices": ["warn", { "minScore": 0.85 }]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": "./reports/lighthouse"
    }
  }
}
